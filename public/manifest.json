{
  "name": "clipboard-app",
  "short_name": "clipboard-app",
  "description": "clipboard util extension",
  "version": "1.0.0",
  "manifest_version": 3,
  "background": {
    "service_worker": "static/js/background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://*/*"],
      "js": ["static/js/content.js"]
    }
  ],
  "permissions": [
    "activeTab",
    "storage",
    "browsingData",
    "clipboardRead",
    "clipboardWrite",
    "contextMenus"
  ],
  "host_permissions": [
    "*://*/*"
  ]
}
